<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="9:30 "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="8dp" />
    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle"
        android:contentDescription="Circle Icon" />
    <ImageView
        android:id="@+id/iv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/iv_cellular"
        android:layout_toRightOf="@id/iv_circle"
        android:src="@drawable/Wifi"
        android:contentDescription="WiFi Icon"
        android:padding="8dp"
        android:layout_marginStart="38dp" />
    <ImageView
        android:id="@+id/iv_cellular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/iv_battery"
        android:src="@drawable/Cellular"
        android:contentDescription="Cellular Data Icon"
        android:padding="8dp" />
    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/Battery"
        android:contentDescription="Battery Icon"
        android:padding="8dp" />
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/socially_logo"
        android:contentDescription="Socially Logo" />
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_smd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="from"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_smd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_accent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="SMD"
        android:textColor="@color/maroon"
        android:textSize="24sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view_accent"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/maroon" />

</RelativeLayout>
