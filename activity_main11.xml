<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Tab Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="2dp">

        <!-- Following Tab -->
        <LinearLayout
            android:id="@+id/following"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- You Tab (Active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textColor="@color/biege"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/biege" />
        </LinearLayout>
    </LinearLayout>

    <!-- Notifications Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Follow Requests Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow Requests"
                    android:textColor="@color/biege"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- New Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="New"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- karennne liked your photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/img_5"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile karennne"
                        android:background="@drawable/circle"
                        android:clipToOutline="true" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="karennne liked your photo. 1h"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_1"
                        android:scaleType="centerCrop"
                        android:contentDescription="Liked Post" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Today Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Today"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- kiero_d, zackjohn and 26 others liked your photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="start|top"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:src="@drawable/img_5"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile kiero_d"
                            android:background="@drawable/circle"
                            android:clipToOutline="true" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="end|bottom"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:src="@drawable/img_4"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile zackjohn"
                            android:background="@drawable/circle"
                            android:clipToOutline="true" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="kiero_d, zackjohn and 26 others liked your photo. 3h"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_1"
                        android:scaleType="centerCrop"
                        android:contentDescription="Liked Post" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- This Week Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="This Week"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- craig_love mentioned you in a comment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/img_4"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile craig_love"
                        android:background="@drawable/circle"
                        android:clipToOutline="true" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a comment: @jacob_w exactly.. 3d"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_1"
                        android:scaleType="centerCrop"
                        android:contentDescription="Mentioned Post" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- martini_rond started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/img_6"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile martini_rond"
                        android:background="@drawable/circle"
                        android:clipToOutline="true" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="martini_rond started following you. 3d"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/biege">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Message"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- maxjacobson started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/img_4"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile maxjacobson"
                        android:background="@drawable/circle"
                        android:clipToOutline="true" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="maxjacobson started following you. 3d"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/biege">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Message"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- mis_potter started following you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/search"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile mis_potter"
                        android:background="@drawable/circle"
                        android:clipToOutline="true" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="mis_potter started following you. 3d"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/biege">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Follow"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- This Month Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="This Month"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/d3d3d3" />

        <!-- Navigation Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/followrequesthome"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/home1"
                android:contentDescription="Home"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/followsearch1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/search"
                android:contentDescription="Search"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/searchpos3"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/icon"
                android:contentDescription="Add Post"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/followheart"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/like1"
                android:contentDescription="Notifications"
                app:tint="@color/biege" />

            <androidx.cardview.widget.CardView
                android:id="@+id/followprofile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@drawable/img_4"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile"
                    android:background="@drawable/circle"
                    android:clipToOutline="true" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Bottom Home Indicator -->
        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:alpha="0.2" />
    </LinearLayout>

</LinearLayout>