<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="jacob_w"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileHeader"
        android:layout_above="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/story_circle"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginStart="16dp">

                    <LinearLayout style="@style/ProfileStatColumn">
                        <TextView style="@style/ProfileStatNumber" android:text="54" />
                        <TextView style="@style/ProfileStatLabel" android:text="Posts" />
                    </LinearLayout>
                    <LinearLayout style="@style/ProfileStatColumn">
                        <TextView style="@style/ProfileStatNumber" android:text="834" />
                        <TextView style="@style/ProfileStatLabel" android:text="Followers" />
                    </LinearLayout>
                    <LinearLayout style="@style/ProfileStatColumn">
                        <TextView style="@style/ProfileStatNumber" android:text="162" />
                        <TextView style="@style/ProfileStatLabel" android:text="Following" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jacob West"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital goodies designer @pixsellz\nEverything is designed."
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:backgroundTint="#CCCCCC"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/StoryContainer">
                        <ImageView style="@style/StoryImageView" android:src="@drawable/ic_profile" android:tint="#CCCCCC" android:background="@drawable/circle_image_bg"/>
                        <TextView style="@style/StoryLabel" android:text="New" />
                    </LinearLayout>

                    <LinearLayout style="@style/StoryContainer">
                        <ImageView style="@style/StoryImageView" android:src="@drawable/sample_post" android:background="@drawable/story_circle" android:padding="4dp"/>
                        <TextView style="@style/StoryLabel" android:text="Friends" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile"
                    android:padding="8dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile"
                    android:padding="8dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_post"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_post"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="2dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_post"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="2dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:elevation="6dp"
        android:layout_alignParentBottom="true">
    </LinearLayout>

</RelativeLayout>