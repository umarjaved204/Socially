<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Search bar container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            android:contentDescription="Search Icon"
            android:layout_marginEnd="12dp"
            app:tint="@color/biege" />

        <TextView
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/qrbar"
            android:contentDescription="Scan QR"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginEnd="4dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/shopping"
                app:tint="@color/biege" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="@color/biege"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="4dp"
            android:text="Style"
            android:textColor="@color/biege"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="4dp"
            android:text="Sports"
            android:textColor="@color/biege"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="4dp"
            android:text="Auto"
            android:textColor="@color/biege"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="4dp"
            android:text="Music"
            android:textColor="@color/biege"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Scrollable image content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingHorizontal="8dp"
            android:paddingBottom="16dp">

            <!-- First row with big image and two smaller images -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_weight="2"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6"
                    android:contentDescription="Featured Image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="2dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_9"
                        android:contentDescription="Small Image 1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_9"
                        android:contentDescription="Small Image 2" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second row with three equal images -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1"
                    android:contentDescription="Grid Image 1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6"
                    android:contentDescription="Grid Image 2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6"
                    android:contentDescription="Grid Image 3" />
            </LinearLayout>

            <!-- Third row with three equal images -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6"
                    android:contentDescription="Grid Image 4" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1"
                    android:contentDescription="Grid Image 5" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6"
                    android:contentDescription="Grid Image 6" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/d3d3d3" />

        <!-- Navigation Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/searchhome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Home"
                android:src="@drawable/home1"
                app:tint="@color/biege" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/search"
                android:contentDescription="Search"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/searchpos"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/icon"
                android:contentDescription="Add Post" />

            <ImageView
                android:id="@+id/searchnotification"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/like"
                android:contentDescription="Notifications"
                app:tint="@color/biege" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mainbottomprofilepic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle"
                    android:src="@drawable/img_4"
                    android:contentDescription="Profile" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Bottom indicator -->
        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:alpha="0.2" />
    </LinearLayout>
</LinearLayout>