<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Status Bar -->
    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="9:30"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle"
            android:contentDescription="Camera Hole Icon" />

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/iv_cellular"
            android:src="@drawable/Wifi"
            android:contentDescription="WiFi Icon"
            android:padding="8dp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/iv_cellular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/iv_battery"
            android:src="@drawable/Cellular"
            android:contentDescription="Cellular Data Icon"
            android:padding="8dp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/iv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/Battery"
            android:contentDescription="Battery Icon"
            android:padding="8dp" />

    </RelativeLayout>

    <!-- Main content area -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"
        android:layout_above="@+id/footer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:id="@+id/searchContainer">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/Search" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="16sp"
                    android:textColor="#888888" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart" />
            </LinearLayout>

            <!-- Category Tabs -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🛍️ Shop"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Style"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:padding="8dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp" />
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp" />
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp" />
            </LinearLayout>

            <!-- Row 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginEnd="1dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginStart="1dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer Navigation -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/Home1"
                android:contentDescription="Home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/Search"
                android:contentDescription="Search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/Create"
                android:contentDescription="Add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHeart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/Like"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/Profile1"
                android:contentDescription="Profile" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>