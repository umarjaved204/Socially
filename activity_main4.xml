<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/maincamera1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:contentDescription="Camera"
            android:src="@drawable/camera"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="22sp"
            android:textColor="@color/biege"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/img_7"
            android:contentDescription="Send"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/homedm"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/share"
            android:contentDescription="Messages"
            />
    </LinearLayout>

    <!-- Stories Section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Your Story -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/your_story"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cardCornerRadius="34dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/grey">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/story_image"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="31dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/circle"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_4" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Story"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Other Stories (Generic) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/user1"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cardCornerRadius="34dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/grey">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/story1"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="31dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/circle"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_5" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karene"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Repeat for other stories, keeping only one more for brevity -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/img2"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cardCornerRadius="34dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/grey">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/story2"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="31dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/circle"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_7" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/img3"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cardCornerRadius="34dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/grey">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/story3"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="31dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/circle"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_3" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Craig"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/img4"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    app:cardCornerRadius="34dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/grey">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/story4"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="31dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/circle"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_2" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="James"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable Post Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- First Post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@color/white">

                <!-- Post Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:src="@drawable/img_4"
                            android:contentDescription="Profile"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle"
                            android:clipToOutline="true" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joshua_J"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tokyo, Japan"
                            android:textSize="13sp"
                            android:textColor="@color/grey"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/options"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/options"
                        android:contentDescription="Options"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Post Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:src="@drawable/img_8"
                    android:contentDescription="Post Image"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop" />

                <!-- Post Interactions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/like"
                        android:contentDescription="Like"
                        app:tint="@color/biege"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/comment"
                        android:contentDescription="Comment"
                        app:tint="@color/biege"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/share"
                        android:contentDescription="Share"

                        android:layout_marginEnd="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/save"
                        android:contentDescription="Save"
                        app:tint="@color/biege" />
                </LinearLayout>

                <!-- Likes and Caption -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by craig, Love and 44,686 others"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joshua_J The game in Japan was amazing and I want to share some photos"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Second Post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@color/white">

                <!-- Post Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:src="@drawable/img_5"
                            android:contentDescription="Profile"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle"
                            android:clipToOutline="true" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karene_smith"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New York, USA"
                            android:textSize="13sp"
                            android:textColor="@color/grey"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_9"
                        android:contentDescription="Options"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Post Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:src="@drawable/img_3"
                    android:contentDescription="Post Image"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop" />

                <!-- Post Interactions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/like"
                        android:contentDescription="Like"
                        app:tint="@color/biege"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/comment"
                        android:contentDescription="Comment"
                        app:tint="@color/biege"
                        android:layout_marginEnd="12dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/img_9"
                        android:contentDescription="10"

                        android:layout_marginEnd="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/save"
                        android:contentDescription="Save"
                        app:tint="@color/biege" />
                </LinearLayout>

                <!-- Likes and Caption -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by mike, sarah and 1,234 others"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/d3d3d3" />

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/mainhome"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:contentDescription="Home"
                android:src="@drawable/home"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/mainsearch"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/search"
                android:contentDescription="Search"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/searchpos1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/icon"
                android:contentDescription="Add Post"
                app:tint="@color/biege" />

            <ImageView
                android:id="@+id/mainnotification"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/like"
                android:contentDescription="Notifications"
                app:tint="@color/biege" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mainbottomprofilepic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle"
                    android:src="@drawable/img_4" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:alpha="0.2" />
    </LinearLayout>
</LinearLayout>