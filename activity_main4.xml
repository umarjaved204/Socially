<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Status Bar -->
    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="9:30"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle"
            android:contentDescription="Camera Hole Icon" />

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/iv_cellular"
            android:src="@drawable/Wifi"
            android:contentDescription="WiFi Icon"
            android:padding="8dp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/iv_cellular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/iv_battery"
            android:src="@drawable/Cellular"
            android:contentDescription="Cellular Data Icon"
            android:padding="8dp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/iv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/Battery"
            android:contentDescription="Battery Icon"
            android:padding="8dp" />

    </RelativeLayout>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:layout_below="@id/statusBar">

        <!-- Camera icon (left) -->
        <ImageView
            android:id="@+id/btnCamera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/Camera"
            android:contentDescription="Camera"
            android:padding="6dp" />

        <!-- App name centered -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#A52A2A" />

        <!-- Right side icons: add + messages -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnAddHeader"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Add"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/btnMessages"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/Share"
                android:contentDescription="Messages"
                android:padding="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content (stories + posts) -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/footer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Stories row -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Story item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:id="@+id/story1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_profile"
                            android:background="@drawable/story_circle"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Story"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Story item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:id="@+id/story2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_profile"
                            android:background="@drawable/story_circle"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karenne"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Post Block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/Post"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="joshua_l The game in Japan was amazing and I want to share some photos"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Post Block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="joshua_l The game in Japan was amazing and I want to share some photos"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Post Block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_post"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="joshua_l The game in Japan was amazing and I want to share some photos"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/Home"
                android:contentDescription="Home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/Search"
                android:contentDescription="Search"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/Create"
                android:contentDescription="Add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnHeart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/Like"
                android:contentDescription="Notifications"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/Profile1"
                android:contentDescription="Profile"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>