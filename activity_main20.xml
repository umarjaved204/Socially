<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    tools:context=".profilepage">

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

    </LinearLayout>

    <!-- Header with back button, username and menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/profileback"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:src="@drawable/Back"
            app:tint="@color/black"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kyan.coleman"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/verified"
                app:tint="@color/bluish"
                />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/menu_dots"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/Options"
            app:tint="@color/black"/>

    </LinearLayout>

    <!-- Profile info section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <!-- Profile picture -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                android:src="@drawable/img_3" />

        </androidx.cardview.widget.CardView>

        <!-- Stats section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="151"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="posts"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="112K"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="followers"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="162"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="following"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Profile details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kyan Coleman"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="kyan.coleman"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Blogger"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecati... more"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="kyan.co"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <!-- Friend connection info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Friend avatars -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_4" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="-8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_5" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="-8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_6" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Followed by your friend, another friend and 297 others"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Following Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/followrequestid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/blue">

            <TextView
                android:id="@+id/followrequestid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Following"
                android:textColor="@color/black"
                android:textSize="14sp"

                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Message Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <!-- Email Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <!-- People Icon (no weight, fixed size) -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:padding="8dp"
            android:src="@drawable/users"
            app:tint="@color/black"/>
    </LinearLayout>



    <!-- Stories section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <!-- Story border with image inside -->
            <!-- One Story Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <!-- One Story Item -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <!-- Outer Grey Circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="36dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey">

                        <!-- Inner White Circle -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="66dp"
                            android:layout_height="66dp"

                            android:layout_gravity="center"
                            android:background="@drawable/circle"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="0dp">

                            <!-- Profile Image -->
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <!-- Label under story -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <!-- Outer Grey Circle -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/highlight1"

                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="36dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey">

                        <!-- Inner White Circle -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="0dp"
                            android:background="@drawable/circle"
                            app:cardBackgroundColor="@color/white">

                            <!-- Profile Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circle"
                                android:src="@drawable/img_3" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <!-- Label under story -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karene"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <!-- Outer Grey Circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="36dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey">

                        <!-- Inner White Circle -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="66dp"
                            android:layout_height="66dp"

                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="0dp"
                            android:background="@drawable/circle"
                            app:cardBackgroundColor="@color/white">

                            <!-- Profile Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circle"
                                android:src="@drawable/img_3" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <!-- Label under story -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karene"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <!-- Outer Grey Circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="36dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey">

                        <!-- Inner White Circle -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="66dp"
                            android:layout_height="66dp"

                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="0dp"
                            android:background="@drawable/circle"
                            app:cardBackgroundColor="@color/white">

                            <!-- Profile Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circle"
                                android:src="@drawable/img_3" />


                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <!-- Label under story -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karene"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <!-- Outer Grey Circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:cardCornerRadius="36dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey">

                        <!-- Inner White Circle -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="66dp"
                            android:layout_height="66dp"

                            android:layout_gravity="center"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="0dp"
                            android:background="@drawable/circle"
                            app:cardBackgroundColor="@color/white">

                            <!-- Profile Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circle"
                                android:src="@drawable/Plus" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <!-- Label under story -->
                </LinearLayout>

            </LinearLayout>

            <!-- Story label below -->

        </LinearLayout>



    </HorizontalScrollView>


    <!-- Tab bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/Grid"
                app:tint="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/Tag"
                app:tint="@color/grey"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Posts grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parrot" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parrot" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parrot" />

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/salman" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="132dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp">

        <ImageView
            android:id="@+id/profilehome"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/Home1" />

        <ImageView
            android:id="@+id/profilesearch"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/Search"
            app:tint="@color/biege"/>

        <ImageView

            android:id="@+id/searchpos4"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/Icon"
            />

        <ImageView
            android:id="@+id/profilnotification"

            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/Like"
            app:tint="@color/biege"/>

        <androidx.cardview.widget.CardView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/profilemyprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_4"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>